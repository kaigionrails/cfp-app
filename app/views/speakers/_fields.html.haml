%fieldset
  %legend.fieldset-legend= t("proposal.form.speaker_information")
  = f.simple_fields_for :speakers, f.object.speakers do |speaker_fields|
    - speaker = speaker_fields.object.decorate

    %p= t("proposal.form.speaker_information_description_html")


    = speaker_fields.input :name, disabled: true, tooltip: ["right", "Edit your profile to update"]

    = speaker_fields.input :bio, disabled: speaker.user!=current_user, maxlength: :lookup, input_html: { value: speaker.bio, rows: 4 }
